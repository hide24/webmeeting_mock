<p id="notice"><%= notice %></p>

<h1>External Services</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Service name</th>
      <th scope="col">Enabled</th>
      <th scope="col">Extras</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @external_services.each do |external_service| %>
      <tr>
        <td class="align-middle"><%= external_service.service_name %></td>
        <td class="align-middle"><%= external_service.enabled %></td>
        <td class="align-middle"><%= external_service.extras %></td>
        <td class="align-middle"><%= link_to 'Show', external_service, class: "btn btn-outline-primary btn-sm" %></td>
        <td class="align-middle"><%= link_to 'Edit', edit_external_service_path(external_service), class: "btn btn-outline-secondary btn-sm" %></td>
        <td class="align-middle"><%= link_to 'Destroy', external_service, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New External Service', new_external_service_path, class: "btn btn-primary" %>
