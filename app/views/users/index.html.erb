<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Display name</th>
      <th scope="col">Given name</th>
      <th scope="col">Surname</th>
      <th scope="col">Mail</th>
      <th scope="col">Guest</th>
      <th colspan="3" scope="col"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td class="align-middle"><%= user.display_name %></td>
        <td class="align-middle"><%= user.given_name %></td>
        <td class="align-middle"><%= user.surname %></td>
        <td class="align-middle"><%= user.mail %></td>
        <td class="align-middle"><%= user.guest %></td>
        <td class="align-middle"><%= link_to 'Show', user, class: "btn btn-outline-primary btn-sm" %></td>
        <td class="align-middle"><%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-secondary btn-sm" %></td>
        <td class="align-middle"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
