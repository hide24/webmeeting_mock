<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :display_name, class: "form-label" %>
    <%= form.text_field :display_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :given_name, class: "form-label" %>
    <%= form.text_field :given_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :surname, class: "form-label" %>
    <%= form.text_field :surname, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :mail, class: "form-label" %>
    <%= form.text_field :mail, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.check_box :guest, class: "form-check-input" %>
    <%= form.label :guest, class: "form-check-label" %>
  </div>

  <div class="mb-3">
    <%= form.check_box :another_mail, class: "form-check-input" %>
    <%= form.label :another_mail, class: "form-check-label" %>
  </div>

  <div class="actions">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to 'Back', users_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>
